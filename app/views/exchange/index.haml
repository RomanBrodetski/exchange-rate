= form_for :convert,  :url => convert_path, :remote => true, :html => {:class => 'form-horizontal'} do |f|
  .control-group
    %label.control-label
      Date
    .controls
      = f.text_field :date, :class => 'date', :value => Date.today
  .control-group
    %label.control-label
      Amount
    .controls
      = f.text_field :amount, :type => 'number', :step => 'any', :value => 100
  .control-group
    %label.control-label
      From
    .controls
      = f.select :from, @currencies, {}, :class => 'select2'
  .control-group
    %label.control-label
      To
    .controls
      = f.select :to, @currencies, {}, :class => 'select2'
  .control-group
    .controls
      = f.submit :convert, :class => 'btn'
.alert.hide#result

